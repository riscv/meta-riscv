+#define JUMP_DDK(mwsi, sym, ...)                          \
+   do {                                                   \
+      void *_entry = p_atomic_read(&mwsi->symtab.sym);    \
+                                                          \
+      if (!_entry) {                                      \
+         _entry = LOOKUP_DDK(mwsi, sym);                  \
+                                                          \
+         if (_entry)                                      \
+            p_atomic_set(&mwsi->symtab.sym, _entry);      \
+      }                                                   \
+                                                          \
+      if (_entry) {                                       \
+         __typeof__(mwsi->symtab.sym) _func = _entry;     \
+                                                          \
+         return _func(__VA_ARGS__);                       \
+      }                                                   \
+   } while(0)
